    "EssenceToolMain": {
        "doc": "基质小工具主入口（对当前选中的基质执行一次判断与锁定/解锁）",
        "recognition": "DirectHit",
        "next": [
            "EssenceJudge_Treasure",
            "EssenceJudge_Material"
        ]
    },
    "EssenceTooltip_S1": {
        "doc": "基质属性行 1（s1）OCR",
        "only_rec": true,
        "recognition": {
            "type": "OCR",
            "param": {
                "roi": [
                    1000,
                    240,
                    100,
                    20
                ]
            }
        }
    },
    "EssenceTooltip_S2": {
        "doc": "基质属性行 2（s2）OCR",
