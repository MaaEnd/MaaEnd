            "type": "OCR",
            "param": {
                "roi": [
                    1000,
                    275,
                    90,
                    20
                ]
            }
        }
    },
    "EssenceTooltip_S3": {
        "doc": "基质属性行 3（s3）OCR",
        "only_rec": true,
        "recognition": {
            "type": "OCR",
            "param": {
                "roi": [
                    1000,
                    315,
                    100,
                    20
                ]
            }
        }
